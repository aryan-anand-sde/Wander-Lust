<% layout("/layouts/boilerplate") -%>

    <body>
        <h3 class="highlight m-3 fw-bold">
            Edit: <%= listing.title %>
        </h3>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="m-5 row needs-validation"
            novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" name="title" id="title" value="<%= listing.title %>"
                    class="form-control form-control-lg" placeholder="This field can't be empty" required>
                <div class="valid-feedback">
                    Title looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid title.
                </div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea name="description" id="description" class="form-control" rows="3"
                    placeholder="This field can't be empty" required><%= listing.description %></textarea>
                <div class="valid-feedback">
                    Description looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid description.
                </div>
            </div>

            <div>
                <h3>Original Image</h3>
                <img src="<%= resizedImageUrl %>" alt="old image" style="max-width: 300px;">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image:</label>
                <input type="file" name="image" id="image" class="form-control">
            </div>

            <div class="mb-3 col-5">
                <label for="price" class="form-label">Price per Night:</label>
                <input type="number" name="price" id="price" value="<%= listing.price %>" class="form-control"
                    placeholder="This field can't be empty" required>
                <div class="valid-feedback">
                    Price looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid price.
                </div>
            </div>

            <div class="mb-3 col-7">
                <label for="country" class="form-label">Country:</label>
                <input type="text" name="country" id="country" value="<%= listing.country %>" class="form-control"
                    placeholder="This field can't be empty" required>
                <div class="valid-feedback">
                    Country looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid country.
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location:</label>
                <input type="text" name="location" id="location" value="<%= listing.location %>" class="form-control"
                    placeholder="This field can't be empty" required>
                <div class="valid-feedback">
                    Location looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid location.
                </div>
            </div>

            <button type="submit" class="btn btn-danger btn-lg mt-3">Update Listing</button>
        </form>
    </body>
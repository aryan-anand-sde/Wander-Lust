<% layout("/layouts/boilerplate") -%>

    <body>
        <form action="/listings" method="post" class="m-5 row needs-validation" novalidate
            enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" name="title" id="title" placeholder="Add an eye-catching Title"
                    class="form-control form-control-lg" required>
                <div class="valid-feedback">
                    Title looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid title.
                </div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea name="description" id="description" placeholder="Add the Description about your listing"
                    class="form-control" rows="3" required></textarea>
                <div class="valid-feedback">
                    Description looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid description.
                </div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image:</label>
                <input type="file" name="image" id="image" class="form-control" required>
            </div>

            <div class="mb-3 col-5">
                <label for="price" class="form-label">Price per Night:</label>
                <input type="number" name="price" id="price" placeholder="Add the Price per night" class="form-control"
                    required>
                <div class="valid-feedback">
                    Price looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid price.
                </div>
            </div>

            <div class="mb-3 col-7">
                <label for="country" class="form-label">Country:</label>
                <input type="text" name="country" id="country" placeholder="Add the Country" class="form-control"
                    required>
                <div class="valid-feedback">
                    Country looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid country.
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location:</label>
                <input type="text" name="location" id="location" placeholder="Add the Location" class="form-control"
                    required>
                <div class="valid-feedback">
                    Location looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid location.
                </div>
            </div>

            <button type="submit" class="btn btn-danger btn-lg mt-3">Add Listing</button>
        </form>
    </body>